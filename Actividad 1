abuelo_de(X,Y) :- padre_de(X,Z), padre_de(Z,Y).
abuelo_de(X,Y) :- padre_de(X,Z), madre_de(Z,Y).

abuela_de(X,Y) :- madre_de(X,Z), padre_de(Z,Y).
abuela_de(X,Y) :- madre_de(X,Z), madre_de(Z,Y).
